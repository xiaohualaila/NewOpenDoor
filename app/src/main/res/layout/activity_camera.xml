<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">
    <ImageView
        android:id="@+id/ad"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/ad"
        />
    <RelativeLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="390dp"
       android:layout_margin="5dp"
        android:layout_below="@+id/ad"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@drawable/pic_bg"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            >
            <SurfaceView
                android:id="@+id/camera_sf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/state_tip"
            android:ems="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_width="40dp"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent" />
        <ug.newopendoor.util.RoundImageView
            android:id="@+id/img_server"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/pic_bg"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_above="@+id/iv_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "25dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ticket_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="票   号："/>
        <TextView
            android:id="@+id/tv_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="34sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/iv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="五 粮 液 中 心 欢 迎 您"
        android:textSize="38sp"
        android:textStyle="bold"

        android:layout_marginBottom="10dp"
        />
    <!--android:textColor="@color/ziti"-->
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable= "true"
    android:focusableInTouchMode= "true"
    android:background="@mipmap/bg_main">
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：15,16号场馆内部闸机入场口，进口输入 1 ，出口输入 0 ，可进可出口输入 2 ;"
        android:textSize="22sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:id="@+id/ll_door_no"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/tip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/background_corner_left"
            android:textSize="18sp"
            android:text="出入口闸机编号" />
        <ug.newopendoor.util.ClearEditTextWhite
            android:id="@+id/ct_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:inputType="number"
            android:textColor="@color/clear_edit_text"
            android:background="@drawable/background_corner_right" />
    </LinearLayout>
    <TextView
        android:id="@+id/finish"
        android:layout_below="@+id/ll_door_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_pressed"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="20dp"
        android:text="完 成"/>
</RelativeLayout>
